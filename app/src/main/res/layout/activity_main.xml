<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/grey">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:text="@string/resultado"
        android:id="@+id/resultado"
        android:textSize="80dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintVertical_bias="0.05"
        />

    <Button
        android:id="@+id/borrar"
        android:layout_width="180dp"
        android:layout_height="98dp"
        android:backgroundTint="@color/naranja"
        android:text="C"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        app:layout_constraintVertical_bias="0.0"
        />

    <Button
        android:id="@+id/eliminar"
        android:layout_width="89dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/naranja"
        android:text="Borrar"
        android:textColor="@color/black"
        android:textSize="13dp"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/division"
        app:layout_constraintStart_toEndOf="@id/borrar"
        app:layout_constraintHorizontal_bias="0.994"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:id="@+id/division"
        android:layout_width="89dp"
        android:layout_height="100dp"
        android:backgroundTint="@color/naranja"
        android:text="/"
        android:textColor="@color/black"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.633"
        app:layout_constraintStart_toEndOf="@id/eliminar"
        app:layout_constraintTop_toBottomOf="@id/resultado"
        app:layout_constraintVertical_bias="0" />

    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/siete"
        android:text="7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borrar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/ocho"
        android:text="8"
        app:layout_constraintStart_toEndOf="@id/siete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borrar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/nieve"
        android:text="9"
        app:layout_constraintStart_toEndOf="@id/ocho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borrar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/multiplicar"
        android:text="*"
        app:layout_constraintStart_toEndOf="@id/nieve"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/borrar"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/cuatro"
        android:text="4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/siete"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/cinco"
        android:text="5"
        app:layout_constraintStart_toEndOf="@id/cuatro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ocho"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/seis"
        android:text="6"
        app:layout_constraintStart_toEndOf="@id/cinco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ocho"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/sumar"
        android:text="+"
        app:layout_constraintStart_toEndOf="@id/seis"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ocho"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/tres"
        android:text="3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuatro"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/dos"
        android:text="2"
        app:layout_constraintStart_toEndOf="@id/cuatro"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuatro"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/uno"
        android:text="1"
        app:layout_constraintStart_toEndOf="@id/dos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuatro"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/resta"
        android:text="-"
        app:layout_constraintStart_toEndOf="@id/uno"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cuatro"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="180dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/cero"
        android:text="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tres"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/punto"
        android:text="."
        app:layout_constraintStart_toEndOf="@id/dos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/uno"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />
    <Button
        android:layout_width="90dp"
        android:backgroundTint="@color/naranja"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:layout_height="105dp"
        android:id="@+id/igual"
        android:text="="
        app:layout_constraintStart_toEndOf="@id/punto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/resta"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintVertical_bias="0"
        />

    <TextView
        android:id="@+id/miniatura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="30dp"
        app:layout_constraintBottom_toTopOf="@+id/resultado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="1"
        />
</androidx.constraintlayout.widget.ConstraintLayout>